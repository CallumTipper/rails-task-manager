<%= form_for(task) do |f| %>
  <%= f.label :title, "Task Name" %>
  <%= f.text_field :title%>

  <%= f.label :details, "Task Details" %>
  <%= f.text_area :details%>

  <% if task.persisted? %>
    <%= f.label :completed %>
    <%= f.check_box :completed%>
  <% end %>


  <%= f.submit "Add Task" %>
<% end %>
