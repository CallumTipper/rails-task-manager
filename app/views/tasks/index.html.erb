
<%= link_to "Add Task", "tasks/new" %>

<% @tasks.each do |task| %>
<h2><%= link_to  task.title, "tasks/#{task.id}" %></h2>
<h3>Completed: <%= check_box "task", "completed", {:checked => task.completed, :disabled => true} %></h3>

<%= link_to "Edit", "tasks/#{task.id}/edit" %>

<%= link_to "Delete", "tasks/#{task.id}", method: :delete,
  data: { confirm: "Delete?" }%>

<% end %>


